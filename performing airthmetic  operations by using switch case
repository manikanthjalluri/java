import java.io.*;
import java.util.*;
class Calculator
{
    public static void main(String[]args)
    {
        Scanner s=new Scanner(System.in);
        int a,b;
        int c;
        System.out.println("enter a value");
        a=s.nextInt();
        System.out.println("enter a value");
        b=s.nextInt();
        System.out.println("enter a value");
        c=s.nextInt();
        switch (c)
        {
            case 1:
                System.out.println((a+b));
                break;
            case 2:
                System.out.println((a-b));
                break;
            case 3:
                System.out.println((a*b));
                break;
            case 4:
                if(b!=0)
                {
                System.out.println((a/b));
                break;
                }
                else
                {
                 System.out.println(" invalid division");
                }
             case 5: 
                System.out.println((a%b));
                break;
            default:
               System.out.println("invalid case");
               break;
        }
        
    }
}

